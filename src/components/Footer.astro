      color: var(--white);
   }
   a:hover{
      color: var(--lime-green);
   }

   p{
      font-weight: var(--fw-regular);
      font-size: var(--fs-100);
      line-height: var(--fh-700);
      letter-spacing: var(--fls-100);
      margin-top: 24px;
   }

   .logo{
      fill: var(--white);
   }
   
   .move-icon{
      margin-bottom: 32px;
      display: flex;
